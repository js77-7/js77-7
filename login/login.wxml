<view class="container">
   <text>欢迎登陆小胖商城</text>
   <input type="number" class="phone_number" bindblur="getPhone" placeholder="请输入手机号码"></input>
   <view class="code">
      <input class="code_number" bindblur="getCode" placeholder="请输入验证码"></input>
      <button class="btn_code">获取验证码</button>
   </view>
   <view>
    <button class="btn_login" bindtap="login">商城登陆</button>
   </view>
</view>
